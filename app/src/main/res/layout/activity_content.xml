<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/serve2_background"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="18dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_back"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_debriscontnet"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="16dp"/>
        <ImageView
            android:id="@+id/img_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/kgthisisnotgoodbye"
        android:text="test"
        android:textColor="@color/white"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="27dp"/>
    <TextView
        android:id="@+id/txt_description"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/kgthisisnotgoodbye"
        android:text="contents"
        android:textColor="@color/white"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="9dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_test" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decompose"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/txt_years"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="year"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="20sp"
/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synthetic resin"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="13dp" />
        <TextView
            android:id="@+id/txt_synthetic_resin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="quality"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="20sp"
            android:gravity="center" />
        </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's the problem?"
        android:fontFamily="@font/kgthisisnotgoodbye"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="17dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/detail_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/problem_toxic"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/problem_norecycle"
                    android:layout_marginLeft="90dp"/>
            </FrameLayout>

    </LinearLayout>
</LinearLayout>