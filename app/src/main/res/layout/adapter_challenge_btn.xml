<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_challengebox1" />
        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/cpb_circlebar1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:progress_text_size="8sp"
            app:style="solid_line"
            app:progress_stroke_width="2dp "
            app:progress_stroke_cap="round"
            app:progress_start_color="@color/white"
            app:progress_end_color="#4C7396"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progress_text_color="@color/white"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save\nWater"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/white"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/08"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/white"
            android:layout_marginTop="116dp"
            android:layout_marginLeft="10dp"/>
    </FrameLayout>

</LinearLayout>