<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentMypage"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="80dp"
            android:layout_marginRight="50px"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="160px"
                android:layout_height="160px"
                android:src="@drawable/ic_launcher_background"></de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4px"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="introduce"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="You've come all the way here!"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="343dp"
                android:layout_height="10dp"
                android:indeterminateOnly="false"
                android:layout_marginLeft="16dp"
                android:progressBackgroundTint="#F4F4F4"
                android:progressTint="@color/main_color"
                android:layout_marginTop="3dp"
                android:progressDrawable="@drawable/mypage_progressbar"
                android:max="100"
                android:progress="10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/round_mypagebox" />

            <ImageView
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/round_mypagebox" />

            <ImageView
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/round_mypagebox" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLICATIONS"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q&amp;A"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event about Us"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change linked account"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
</LinearLayout>